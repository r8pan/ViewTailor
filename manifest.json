{
    "name": "View Tailor",
    "description": "Customize how your pages look",
    "author": "br8558",
    "version": "1.0.0",
    "icons": {},
    "permissions": ["activeTab", "tabs", "storage", "<all_urls>"],
    "browser_action": {
        "default_title": "Untitled",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "all_frames": false,
            "run_at" : "document_idle",
            "js": ["style_runner.js"]
        }
    ],
    "web_accessible_resources": [
        "style.js",
        "src/*"
    ],
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Alt+W",
                "mac": "Alt+W",
                "chromeos": "Alt+W",
                "linux": "Alt+W"
            }
        }
    },
    "manifest_version": 2
}
